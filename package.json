{
  "name": "workflow-ca",
  "version": "1.0.0",
  "description": "To improve the quality of an existing environment by establishing useful workflows that make the development process more efficient.",
  "main": "index.js",
  "scripts": {
    "test": "npm run test-unit && npm run test-e2e-cli",
    "build": "sass src/scss:dist/css",
    "start": "sass --watch src/scss:dist/css & live-server",
    "format": "prettier -w src/**/*.js",
    "lint": "eslint src/**/*.js",
    "lint-fix": "eslint src/**/*.js --cache --fix",
    "test-unit": "jest",
    "test-e2e": "cypress open",
    "test-e2e-report": "cypress run --reporter mochawesome",
    "test-e2e-cli": "cypress run",
    "prepare": "husky install",
    "dev": "vite",
    "vite-build": "vite build",
    "vite-preview": "vite preview"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.19.3",
    "@babel/preset-env": "^7.19.4",
    "cypress": "^10.7.0",
    "dotenv": "^16.0.3",
    "eslint": "^8.26.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-jest": "^27.1.3",
    "husky": "^8.0.1",
    "jest": "^29.2.1",
    "lint-staged": "^13.0.3",
    "live-server": "^1.1.0",
    "prettier": "^2.7.1",
    "sass": "^1.54.8",
    "vite": "^3.2.2"
  },
  "dependencies": {
    "@popperjs/core": "^2.11.6",
    "bootstrap": "^5.2.2",
    "bootstrap-dark-5": "^1.1.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Anclagen/social-media-client-workflow.git"
  },
  "bugs": {
    "url": "https://github.com/Anclagen/social-media-client-workflow/issues"
  },
  "homepage": "https://github.com/Anclagen/social-media-client-workflow#readme",
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint --fix",
      "jest --findRelatedTests"
    ],
    "*.html": [
      "prettier --write"
    ],
    "*.scss": [
      "prettier --write"
    ]
  }
}
